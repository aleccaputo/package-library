{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true,
    "jasmine": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": [
    "@gjv/eslint-config-typescript"
  ],
  "rules": {
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": ["error"],

    "no-redeclare": "off",
    "@typescript-eslint/no-redeclare": ["error"]
  }
}
